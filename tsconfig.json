{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "inlineSourceMap": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**",
    "!typings/main/**",
    "!typings/main.d.ts"
  ],
  "exclude": [
    "typings/main",
    "typings/main.d.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "files": [
    "Comment/controller.ts",
    "Comment/interface.ts",
    "Comment/model.ts",
    "Comment/routes.ts",
    "config/passport.ts",
    "Movie/controller.ts",
    "Movie/interface.ts",
    "Movie/model.ts",
    "Movie/routes.ts",
    "ngApp/js/app.ts",
    "ngApp/js/Controllers/GlobalController.ts",
    "ngApp/js/Controllers/HomeController.ts",
    "ngApp/js/Controllers/MovieAddController.ts",
    "ngApp/js/Controllers/MovieDetailsController.ts",
    "ngApp/js/Controllers/MovieUpdateController.ts",
    "ngApp/js/Controllers/UserLoginController.ts",
    "ngApp/js/Controllers/UserRegisterController.ts",
    "ngApp/js/Services/AuthInterceptor.ts",
    "ngApp/js/Services/CommentService.ts",
    "ngApp/js/Services/MovieServices.ts",
    "ngApp/js/Services/UserService.ts",
    "server.ts",
    "typings/browser.d.ts",
    "typings/browser/ambient/angular-resource/index.d.ts",
    "typings/browser/ambient/angular-ui-bootstrap/index.d.ts",
    "typings/browser/ambient/angular-ui-router/index.d.ts",
    "typings/browser/ambient/angular/index.d.ts",
    "typings/browser/ambient/bcrypt/index.d.ts",
    "typings/browser/ambient/body-parser/index.d.ts",
    "typings/browser/ambient/bootstrap/index.d.ts",
    "typings/browser/ambient/cookie-parser/index.d.ts",
    "typings/browser/ambient/express-jwt/index.d.ts",
    "typings/browser/ambient/express-serve-static-core/index.d.ts",
    "typings/browser/ambient/express-unless/index.d.ts",
    "typings/browser/ambient/express/index.d.ts",
    "typings/browser/ambient/jquery/index.d.ts",
    "typings/browser/ambient/jsonwebtoken/index.d.ts",
    "typings/browser/ambient/mime/index.d.ts",
    "typings/browser/ambient/mongoose/index.d.ts",
    "typings/browser/ambient/morgan/index.d.ts",
    "typings/browser/ambient/node/index.d.ts",
    "typings/browser/ambient/passport-facebook/index.d.ts",
    "typings/browser/ambient/passport-local/index.d.ts",
    "typings/browser/ambient/serve-favicon/index.d.ts",
    "typings/browser/ambient/serve-static/index.d.ts",
    "User/controller.ts",
    "User/interface.ts",
    "User/model.ts",
    "User/routes.ts",
    "views/viewRoutes.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
